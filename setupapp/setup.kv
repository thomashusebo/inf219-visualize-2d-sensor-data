WindowManager:
    MainWindow:
    NewProjectWindow:
    ContinueProjectWindow:
    LoadProjectWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        padding: [200,200,200,100]

        Button:
            text: "Start new live project (NOT FUNCTIONAL)"
            on_release:
                app.root.current = "new_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Continue live project"
            on_release:
                app.root.current = "continue_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Load previous project"
            on_release:
                app.root.current = "load_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Import project (NOT FUNCTIONAL)"

        Button:
            text: "Export project (NOT FUNCTIONAL)"

        Button:
            text: "Exit"
            on_release: root.quit()

<NewProjectWindow>:
    name: "new_project"

    project_name: project_name

    GridLayout:
        cols: 1
        padding: 200

        GridLayout:
            cols: 2

            Label:
                text: "Project Name"

            TextInput:
                id: project_name
                multiline: False

        Button:
            text: "Start New Project"
            on_release:
                root.start_new_project()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ContinueProjectWindow>:
    name: "continue_project"

    GridLayout:
        cols: 1
        padding: 200


<LoadProjectWindow>:
    name: "load_project"

    GridLayout:
        cols: 1
        padding: 200








