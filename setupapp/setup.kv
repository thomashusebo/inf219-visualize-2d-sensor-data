WindowManager:
    MainWindow:
    NewProjectWindow:
    ContinueProjectWindow:
    LoadProjectWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        padding: [200,200,200,100]

        Button:
            text: "Start new live project"
            on_release:
                app.root.current = "new_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Continue live project"
            on_release:
                app.root.current = "continue_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Load previous project"
            on_release:
                app.root.current = "load_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Import project (NOT FUNCTIONAL)"

        Button:
            text: "Export project (NOT FUNCTIONAL)"

        Button:
            text: "Exit"
            on_release: root.quit()

<NewProjectWindow>:
    name: "new_project"

    project_name: project_name
    password: password
    confirm_password: confirm_password
    status_label: my_status_label

    GridLayout:
        cols: 1
        padding: [200,100,200,100]

        Label:
            id: my_status_label
            text: ""

        GridLayout:
            cols: 2
            height: 100

            Label:
                text: "Project Name"

            TextInput:
                id: project_name
                multiline: False

            Label:
                text: "Project Password"

            TextInput:
                id: password
                password: True
                multiline: False

            Label:
                text: "Confirm Password"

            TextInput:
                id: confirm_password
                password: True
                multiline: False

        Button:
            text: "Start New Project"
            on_release:
                root.start_new_project()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ContinueProjectWindow>:
    name: "continue_project"

    GridLayout:
        size_hiny_y: None
        height: sum(x.height for x in self.children)
        cols: 1
        padding: [200,100,200,100]
        spacing: 10
        row_default_height: 40


<LoadProjectWindow>:
    name: "load_project"

    GridLayout:
        cols: 1
        padding: [200,100,200,100]
        size_hiny_y: None
        height: sum(x.height for x in self.children)
        spacing: 10








