WindowManager:
    MainWindow:
    NewProjectWindow:
    ContinueProjectWindow:
    LoadProjectWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        padding: 200

        Button:
            text: "Continue live project"
            on_release:
                app.root.current = "load_project"
                root.manager.transition.direction = "left"

        Button:
            text: "Load previous project"
            on_release:
                app.root.current = "load_project"
                root.manager.transition.direction = "left"


        Button:
            text: "Exit"
            on_release: root.quit()

<NewProjectWindow>:
    name: "new_project"

    project_name: project_name

    GridLayout:
        cols: 1
        padding: 200

        GridLayout:
            cols: 2

            Label:
                text: "Project Name"

            TextInput:
                id: project_name
                multiline: False

        Button:
            text: "Start New Project"
            on_release:
                root.start_new_project()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ContinueProjectWindow>:
    name: "continue_project"

    GridLayout:
        cols: 1

        Button:
            text: "Continue Previous Project"
            on_release: root.select_project('UpscaledObstructedFlow')

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<LoadProjectWindow>:
    name: "load_project"

    GridLayout:
        cols: 1
        padding: 200

        Button:
            text: "Check existing projects...."
            on_release: root.print_all_projects()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"



